@model DetailsBlogViewModel
@{
    ViewBag.Title = "Details";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Clean Blog - Start Bootstrap Theme</title>
    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom fonts for this template -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <!-- Custom styles for this template -->
    <link href="~/Content/css/clean-blog.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="https://www.squarespace.com/tours/how-to-create-a-blog/?channel=pnb&subchannel=go&campaign=pnb-dr-go-ca-en-verticals-bmm&subcampaign=(verticals-blog_blogs_bmm)&gclid=Cj0KCQjwjpjkBRDRARIsAKv-0O3dWkTdUjGN4xH__rnkTOkVXbvz1849Se-9QB0ecOMy5McLWmQegGIaAu7GEALw_wcB">Blog Application</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    @*<li class="nav-item">
                            <a class="nav-link" href=@Url.Action("Index","Home")>Home</a>
                        </li>*@
                    @*<li class="nav-item">
                            <a class="nav-link" href=@Url.Action("About","Home")>About</a>
                        </li>*@
                    @*<li class="nav-item">
                            <a class="nav-link" href=@Url.Action("Contact","Home")>Contact</a>
                        </li>*@

                    @if ((User.Identity.IsAuthenticated))
                    {
                        <li class="nav-item"><a class="nav-link" href=@Url.Action("Index","BlogPost")>Blogs</a></li>
                    }
                    <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    <li class="nav-item">@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Header -->
    <header class="masthead" style="background-image: url(@Url.Content("~/img/home-bg.jpg"))">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Details of Blogs</h1>
                        <span class="subheading">Please review the details of blogs</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <h2>Details for Blogs</h2>
    <p>@Model.Title</p>
    <p>@Html.Raw(Model.Body)</p>
    <p>@Model.Published</p>
    <p>@Model.DateCreated</p>
    <p>@Model.DateUpdated</p>
    <div class="row">
        <div class="col-md-2">
            <img class="img-responsive" src="@Url.Content(Model.PictureUrl)" />
        </div>
    </div>
    <div>
        Comments:
        @foreach (var comment in Model.Comment)
        {
            <h2>@Model.User.UserName</h2>
            <p>@Model.Body</p>
            <p class="col-md-offset-4"> --- @Model.DateCreated.ToString("yyyy/MM/dd HH:mm");</p>
            <p style="text-align:center;">@Html.Raw(Model.Body)</p>
            <p style="text-align:center;">@Model.UpdatedReason</p>
            <p style="text-align:center;">@Model.DateCreated</p>
            <p style="text-align:center;">@Model.DateUpdated</p>

            if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Moderator")))
            {
                <a href="@Url.Action("Edit", "Comment", new { id = comment.Id } )">Edit ||</a>
                <a href="@Url.Action("Delete", "Comment", new { id = comment.Id })">Delete</a>
            }
        }
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="col-lg-offset-2">
            @using (Html.BeginForm("CreateComment", "BlogPost", FormMethod.Post))
            {
                <input type="hidden" name="Slug" value="@Model.Slug" />
                <textarea name="body" style="width:300px; height:80px;"></textarea>
                <br>
                <input type="submit" value="Submit" />
            }
        </div>
    }
    <div class="top-Menu">
        <div class="search">
                <div style="margin-left:350px;">
                    <input type="text" name="searchTitle" placeholder="Search Titles" />
                    <button type="submit" @Url.Action("Details","BlogPost")>Search!</button>
                </div>
        </div>
    </div>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Scripts/js/clean-blog.min.js"></script>
</body>
</html>
